<div class="w-full" dir="rtl">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "دسته بندی ها" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">دسته بندی ها</h1>
    <%= link_to "دسته‌بندی جدید", new_admin_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-col">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-right">نام</th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-right">توضیحات</th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-right"></th>
            </tr>
            </thead>
            <tbody>
            <% @admin_categories.each do |c| %>
            <tr class="bg-gray-50 border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= link_to c.name, edit_admin_category_path(c) %>
              </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                  <%= c.description %>
                </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= link_to c.image.present? ? image_tag(c.image.variant(:thumb)) : image_tag("https://via.placeholder.com/50") %>
                <%#= link_to image_tag(c.image.present? ? c.image : "https://via.placeholder.com/50"), "#" %>
              </td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

